                    <a href="/forum" id="homeButton"><img src="" alt="homeButton"></a>
                    <button id="themeButton" onclick="changeForumPageTheme()"><img></button>
                    <% if (typeof user == 'undefined'){ %>
                        <a href="/login" id="loginButton"><img src="" alt="loginButton"></a>
                    <% } %>
                    <% if (typeof user != 'undefined'){ %>
                    <form action="/logout" method="post">
                        <button type="submit" id="logoutButton"><img></button>
                    </form>
                <% } %>
                </div>
            </div>
        </div>
        <% if (typeof user != 'undefined' && user[0].Regist_gestor == 1){ %>
        <a href="/user-moderation" id = "user-moderation">Gest√£o Utilizadores</a>
        <% } %>
    </header>